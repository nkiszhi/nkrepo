# NKREPO Flask Configuration Template
# Copy this file to config.ini and configure for your environment

[ini]
# Server IP address (use 0.0.0.0 for all interfaces, 127.0.0.1 for localhost only)
ip = 127.0.0.1
port = 5005
row_per_page = 20

[mysql]
# MySQL database configuration
host = localhost
port = 3306
user = root
passwd = your_password_here
db_category = nkrepo_category
db_family = nkrepo_family
db_platform = nkrepo_platform
charset = utf8mb4

[API]
# VirusTotal API key (get from https://www.virustotal.com/gui/my-apikey)
vt_key = YOUR_VIRUSTOTAL_API_KEY_HERE

[files]
# Path to sample repository (use forward slashes or double backslashes on Windows)
sample_repo = C:/nkrepo/data/samples

# Path to model files
model_path = C:/nkrepo/web/flask/models

# Path to training data
training_data = C:/nkrepo/web/flask/training_data

# Upload folder (relative to Flask app)
upload_folder = ../vue/uploads

[security]
# Secret key for Flask sessions (change this to a random string)
secret_key = change_this_to_a_random_secret_key

# CORS allowed origins (comma-separated)
cors_origins = http://localhost:9528,http://127.0.0.1:9528
